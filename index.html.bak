    <!-- Tailwind CSS (via CDN) -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        ravion: {
                            bg: '#050505',
                            card: '#0F0F0F',
                            primary: '#8B5CF6', // Violet 500
                            secondary: '#3B82F6', // Blue 500
